{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          "server/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "API_BASE_URL": "@api_base_url"
  }
} 